PID="${BASEMAPR:-/opt/mapr}/pid/schemaregistry.pid"

if [ -e $PID ]
then
    TARGET=`cat "$PID"`
fi

if [ "x$TARGET" = "x" ]; then
  echo "${SERVICE_NAME} not running."
  exit 1
else
  echo "${SERVICE_NAME} running as process ${TARGET}"
  exit 0
fi
